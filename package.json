{
  "private": true,
  "workspaces": [
    "server"
  ],
  "scripts": {
    "prettier": "prettier --single-quote --trailing-comma es5 --write '**/{src,test-int}/**/*.{ts,js,graphql}?(x)'",
    "prettier-fix": "yarn prettier --fix",
    "docker-prod": "docker-compose -f docker-base.yml -f docker-prod.yml",
    "docker-local": "docker-compose -f docker-base.yml -f docker-local.yml",
    "docker-dev": "docker-compose -f docker-base.yml -f docker-dev.yml",
    "copyright": "copyright-header --copyrightHolder \"Thoughtworks Inc. All rights reserved\" --include \"server/src\" --templateId \"apache\"",
    "copyright-fix": "yarn run copyright --fix",
    "lint": "yarn tslint -c tslint.json 'server/**/*.{ts,js}?(x)'",
    "lint-fix": "yarn run lint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn run copyright-fix",
      "git add"
    ],
    "*.{ts,js,graphql}?(x)": [
      "yarn run prettier-fix",
      "git add"
    ],
    "*.{ts,js}?(x)": [
      "yarn run lint-fix",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0"
  },
  "dependencies": {
    "copyright-header": "^0.4.4"
  }
}
