{
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "prettier-fix": "prettier --single-quote --trailing-comma es5 --write '**/{src,test-int}/**/*.{ts,js,graphql}?(x)'",
    "docker-prod": "docker-compose -f docker-base.yml -f docker-prod.yml",
    "docker-local": "docker-compose -f docker-base.yml -f docker-local.yml",
    "docker-dev": "docker-compose -f docker-base.yml -f docker-dev.yml",
    "check-copyright": "copyright-header --fix --copyrightHolder \"Thoughtworks Inc. All rights reserved\" --include \"server/src\" --templateId \"apache\"",
    "fix-copyright": "yarn run check-copyright --fix",
    "lint": "yarn tslint -c tslint.json 'server/src/**/*.ts'",
    "lint-fix": "yarn tslint --fix -c tslint.json 'server/src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn run fix-copyright",
      "git add"
    ],
    "*.{ts,js,graphql}?(x)": [
      "prettier --single-quote --trailing-comma es5 --write '**/{src,test-int}/**/*.{ts,js,graphql}?(x)'",
      "git add"
    ],
    "*.{ts,js}?(x)": [
      "yarn tslint --fix -c tslint.json",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "dependencies": {
    "copyright-header": "^0.4.4"
  }
}
