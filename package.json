{
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "prettier": "prettier --write '**/*.{ts,js,graphql}?(x)'",
    "docker-prod": "docker-compose -f docker-base.yml -f docker-prod.yml",
    "docker-local": "docker-compose -f docker-base.yml -f docker-local.yml",
    "docker-dev": "docker-compose -f docker-base.yml -f docker-dev.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,graphql}?(x)": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  }
}
