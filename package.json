{
  "name": "topo-server",
  "version": "1.0.0",
  "description": "Server for topo",
  "main": "index.js",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "prettier": "prettier --single-quote --trailing-comma es5 --write '**/{src,test-int}/**/*.{ts,js,graphql}?(x)'",
    "docker-local": "docker-compose -f docker-base.yml -f docker-local.yml",
    "copyright": "copyright-header --copyrightHolder \"Thoughtworks Inc. All rights reserved\" --include \"src\" --templateId \"apache\"",
    "copyright-fix": "yarn run copyright --fix",
    "lint": "yarn tslint -c tslint.json 'src/**/*.{ts,js}?(x)'",
    "lint-fix": "yarn run lint --fix",
    "start": "NODE_ENV=dev yarn nodemon",
    "start-prod": "NODE_ENV=dev ts-node src",
    "test": "jest src/",
    "test-int": "jest -i --forceExit test-int/",
    "test-all": "yarn test && yarn test-int"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn run copyright-fix",
      "git add"
    ],
    "*.{ts,js,graphql}?(x)": [
      "yarn run prettier-fix",
      "git add"
    ],
    "*.{ts,js}?(x)": [
      "yarn run lint-fix",
      "git add"
    ]
  },
  "dependencies": {
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.155",
    "apollo-server": "^2.14.3",
    "apollo-server-testing": "^2.14.3",
    "dotenv": "^8.2.0",
    "graphql": "^15.1.0",
    "graphql-import": "^1.0.2",
    "lint-staged": "^10.2.10",
    "lodash": "^4.17.11",
    "neo4j-driver": "^4.0.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "copyright-header": "^0.4.4"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "setupFiles": [
      "./dotenv.ts"
    ]
  }
}
